<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#673AB7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_alert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Alert Dialog"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#30FDE8"/>
    <Button
        android:id="@+id/btn_custom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Custim Dialog"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#30FDE8" />
    <Button
        android:id="@+id/btn_fragment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Fragment Dialog"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#30FDE8" />
    <Button
        android:id="@+id/btn_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="D.Picker Dialog"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#30FDE8" />
    <Button
        android:id="@+id/btn_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="T.Picker Dialog"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#30FDE8" />
    <Button
        android:id="@+id/btn_bottomSheet"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="B.Sheet Dialog"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#30FDE8" />
    <Button
        android:id="@+id/btn_snackbar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Snackbar Dialog"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:backgroundTint="#30FDE8" />

</LinearLayout>