<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/liner_1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"
        />

        <ImageView
            android:layout_width="0dp"
            android:id="@+id/img_item"
            android:layout_height="0dp"
            android:src="@drawable/img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/liner_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv"
        android:text="Ushbu rasm sizga tanishmi?"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/btn_like"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/liner_1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_like"
        android:text="Yoqdi"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintLeft_toLeftOf="@id/liner_1"
        app:layout_constraintBottom_toBottomOf="parent"/>

<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dislike"
        android:text="Yoqmadi"
    app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv"
    app:layout_constraintLeft_toRightOf="@id/btn_like"
        app:layout_constraintBottom_toBottomOf="parent"/>








</androidx.constraintlayout.widget.ConstraintLayout>